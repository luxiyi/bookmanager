<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN" "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">
<generatorConfiguration>
    <context id="mysql" targetRuntime="Mybatis3">
        <commentGenerator>
            <property name="suppressDate" value="true"/>
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true" />
        </commentGenerator>
        <!--数据库连接的信息：驱动类、连接地址、用户名、密码 -->
        <jdbcConnection driverClass="com.mysql.jdbc.Driver"
                        connectionURL="jdbc:mysql://116.62.180.224:3308/booklu"
                        userId="root" password="123456">
        </jdbcConnection>
        <!--如果maven工程只是单独的一个工程，targetProject="src/main/java"
         若果maven工程是分模块的工程，targetProject="所属模块的名称"，例如：
        targetProject="ecps-manager-mapper"，下同-->
        <!--存放生成实体类的路径-->
        <javaModelGenerator targetPackage="com.bookmanager.pojo" targetProject="../pojo/src/main/java">
        <!-- enableSubPackages:是否让schema作为包的后缀 -->
        <property name="enableSubPackages" value="false" />
        </javaModelGenerator>
        <!--生成sql映射文件的路径-->
        <sqlMapGenerator targetPackage="com.bookmanager.user.dao.mapper" targetProject="src/main/java">
        <!-- enableSubPackages:是否让schema作为包的后缀 -->
        <property name="enableSubPackages" value="false" />
        </sqlMapGenerator>
        <!--生成dao接口的目录-->
        <javaClientGenerator type="XMLMAPPER" targetPackage="com.bookmanager.user.dao" targetProject="src/main/java">
        <!-- enableSubPackages:是否让schema作为包的后缀 -->
        <property name="enableSubPackages" value="false" />
        </javaClientGenerator>

        <table tableName="loginuser" domainObjectName="LoginUser" enableDeleteByExample="false"
        enableUpdateByExample="false"
        enableSelectByExample="false"
        enableCountByExample="false"
        selectByExampleQueryId="false"></table>

        <table tableName="user"  domainObjectName="User" enableDeleteByExample="false"
        enableUpdateByExample="false"
        enableSelectByExample="false"
        enableCountByExample="false"
        selectByExampleQueryId="false"></table>

         <table tableName="book"  domainObjectName="Book" enableDeleteByExample="false"
                enableUpdateByExample="false"
                enableSelectByExample="false"
                enableCountByExample="false"
                selectByExampleQueryId="false"></table>

        <table tableName="bookcart"  domainObjectName="BookCart" enableDeleteByExample="false"
               enableUpdateByExample="false"
               enableSelectByExample="false"
               enableCountByExample="false"
               selectByExampleQueryId="false"></table>

        <table tableName="borrow"  domainObjectName="Borrow" enableDeleteByExample="false"
               enableUpdateByExample="false"
               enableSelectByExample="false"
               enableCountByExample="false"
               selectByExampleQueryId="false"></table>

        <table tableName="comment"  domainObjectName="Comment" enableDeleteByExample="false"
               enableUpdateByExample="false"
               enableSelectByExample="false"
               enableCountByExample="false"
               selectByExampleQueryId="false"></table>

        <table tableName="replay"  domainObjectName="Replay" enableDeleteByExample="false"
               enableUpdateByExample="false"
               enableSelectByExample="false"
               enableCountByExample="false"
               selectByExampleQueryId="false"></table>


        <!-- 指定数据库表 -->
        <table schema="" tableName="wx_user_info"></table>
    </context>
</generatorConfiguration>